<h1>投稿一覧ページ</h1>

<div class="container">
	<div class="row">
		<% @posts.each do |post| %>
		  <table>
		  	<h5>ここにuser情報を表示する</h5>
			  	<tr>
			  		<th>

			  			<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100" %>

			  		</th>
			  	</tr>

				<tr>
					<th>
						<%= link_to post_path(post) do %>
						   <%= attachment_image_tag post, :image, format: 'jpeg', size: "600x400" %>
						<% end %>
					</th>
					<th><%= post.recipe_name %></th>
					<th><%= post.caption %></th>
				</tr>

	      </table>
	    <% end %>